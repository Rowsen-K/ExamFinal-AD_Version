<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<android.support.percent.PercentRelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="160dp"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="0dp"
    app:layout_marginTopPercent="1%"
    app:layout_widthPercent="98.9999%">
    <ScrollView
        android:id="@+id/sv_question"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        app:layout_marginLeftPercent="2%"
        app:layout_marginTopPercent="0.8%"
        app:layout_heightPercent="62%">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:gravity="left"
            android:text="这是一个问题11111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111"
            android:textColor="@color/trans40"
            android:textSize="20sp" />
    </ScrollView>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_answer1"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_below="@id/sv_question"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_answernormal"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        app:layout_heightPercent="32.999998%"
        app:layout_marginTopPercent="0.99999952%"
        app:layout_widthPercent="95.0%">

        <TextView
            android:id="@+id/tv_answer1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="1:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_marginLeftPercent="1.9999981%"
            app:layout_marginRightPercent="1.9999981%" />
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
