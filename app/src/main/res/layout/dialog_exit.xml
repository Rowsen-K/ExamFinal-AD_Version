<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/pad_40"
    android:layout_marginRight="@dimen/pad_40"
    android:background="@drawable/shape_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_topradius_dialog"
        android:gravity="center"
        android:paddingTop="15.0dip"
        android:paddingBottom="15.0dip"
        android:text="确定要退出吗？"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/trans40" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pad_49"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exit"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/tv_sel_bule"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="退出"
            android:textColor="@color/dark_blue"
            android:textSize="22sp" />

        <View
            android:layout_width="0.6dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="13.0dip"
            android:layout_marginBottom="13.0dip"
            android:background="@color/trans40" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/tv_sel_bule"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="取消"
            android:textColor="@color/dark_blue"
            android:textSize="22sp" />
    </LinearLayout>
</LinearLayout>
