<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_game"
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bg_item"
        app:layout_marginTopPercent="1%"
        app:layout_widthPercent="96.9999%">

        <TextView
            android:id="@+id/tv_question_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:text="第0题"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <android.support.percent.PercentRelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/sv_question"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                app:layout_heightPercent="54.999996%"
                app:layout_marginLeftPercent="4%"
                app:layout_marginTopPercent="11%">

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="这是一个问题"
                    android:textColor="@color/trans40"
                    android:textSize="20sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeStepGranularity="0.5sp"
                    app:autoSizeTextType="uniform" />

                <ImageView
                    android:id="@+id/qustion_img"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_result"
                android:layout_width="75dip"
                android:layout_height="60dip"
                android:layout_alignTop="@id/sv_question"
                android:scaleType="fitXY"
                android:src="@drawable/icon_gameright"
                android:visibility="invisible"
                app:layout_marginLeftPercent="10.000002%" />

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/rl_answer1"
                android:layout_width="0dp"
                android:layout_height="0.0dip"
                android:layout_below="@id/sv_question"
                android:layout_gravity="left"
                android:background="@drawable/bg_answernormal"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                app:layout_heightPercent="12.999998%"
                app:layout_marginLeftPercent="8%"
                app:layout_marginTopPercent="2.99999952%"
                app:layout_widthPercent="36.999998%">

                <com.andexert.library.RippleView
                    android:id="@+id/rip1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_answer1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="1:"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform"/>
                </com.andexert.library.RippleView>
            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/rl_answer2"
                android:layout_width="0dp"
                android:layout_height="0.0dip"
                android:layout_below="@id/sv_question"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/rl_answer1"
                android:background="@drawable/bg_answernormal"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                app:layout_heightPercent="12.999998%"
                app:layout_marginLeftPercent="10%"
                app:layout_marginTopPercent="2.99999952%"
                app:layout_widthPercent="36.999998%">

                <com.andexert.library.RippleView
                    android:id="@+id/rip2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_answer2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="2:"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform"/>
                </com.andexert.library.RippleView>
            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/rl_answer3"
                android:layout_width="0dp"
                android:layout_height="0.0dip"
                android:layout_below="@id/rl_answer1"
                android:background="@drawable/bg_answernormal"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                app:layout_heightPercent="12.999998%"
                app:layout_marginLeftPercent="8%"
                app:layout_marginTopPercent="2.49999952%"
                app:layout_widthPercent="36.999998%">

                <com.andexert.library.RippleView
                    android:id="@+id/rip3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_answer3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="3:"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform"/>
                </com.andexert.library.RippleView>
            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/rl_answer4"
                android:layout_width="0dp"
                android:layout_height="0.0dip"
                android:layout_below="@id/rl_answer2"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/rl_answer3"
                android:background="@drawable/bg_answernormal"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                app:layout_heightPercent="12.999998%"
                app:layout_marginLeftPercent="10%"
                app:layout_marginTopPercent="2.49999952%"
                app:layout_widthPercent="36.999998%">

                <com.andexert.library.RippleView
                    android:id="@+id/rip4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_answer4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="4:"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform" />
                </com.andexert.library.RippleView>
            </android.support.percent.PercentRelativeLayout>

        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>